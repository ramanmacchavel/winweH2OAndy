<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <EditText
            android:id="@+id/txt_Name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:maxLength="20"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/err_Label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF0000"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/txt_Street_plot"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Street/plot"
            android:inputType="text"
            android:maxLength="25"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/err_Label_plot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF0000"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/txt_Area"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Area Details"
            android:inputType="text"
            android:maxLength="25"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/err_Label_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF0000"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/txt_Pin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="PIN"
            android:inputType="number"
            android:maxLength="6"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/err_Label_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF0000"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_Register"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_style"
            android:gravity="center"
            android:orientation="vertical"
            android:text="Register"
            android:textColor="@android:color/white" />

    </LinearLayout>
</LinearLayout>